{
  "name": "piqnote",
  "version": "0.1.0",
  "description": "Piqnote CLI by PromethIQ - generate high-quality Git commit messages.",
  "license": "AGPL-3.0-only",
  "bin": {
    "piqnote": "dist/cli.js"
  },
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p .",
    "start": "npm run build && node dist/cli.js",
    "dev": "ts-node src/cli.ts",
